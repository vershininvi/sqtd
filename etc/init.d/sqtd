pid_file="/var/run/sqtd/sqtd.pid"

depend() {
	need syslog
	provide sqtd
}

start_pre() {
	checkpath -d -m 0775 -o root:root /var/run/sqtd
}

start() {
	ebegin "Starting sqtd"
	start-stop-daemon --start --pidfile ${pid_file} \
		--user zabbix --group zabbix --exec /usr/sbin/sqtd -- -c /etc/sqtd/sqtd.conf ${SQTD_DEBUGLEVEL}
	eend $?
}

stop() {
	ebegin "Stopping sqtd"
	start-stop-daemon  --stop --pidfile ${pid_file}
	eend $?
}
